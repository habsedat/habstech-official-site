/**
 * HABS TECHNOLOGIES GROUP
 * Firebase Storage Security Rules
 */

rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isSuperAdmin() {
      return isAuthenticated() && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             (firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'super_admin' ||
              firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    function isEditor() {
      return isAuthenticated() && 
             (firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'super_admin' ||
              firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
              firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'editor');
    }
    
    function isValidImageSize() {
      return request.resource.size < 10 * 1024 * 1024; // 10MB
    }
    
    // NO RESTRICTIONS for videos - accept any size, any length
    function isValidVideoSize() {
      return true; // No size limit for videos
    }
    
    function isValidFileSize() {
      return true; // No size limit for general files
    }
    
    // Public files - anyone can read, authenticated users can write (for development)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated() && isValidImageSize();
    }
    
    // Media files - anyone can read, ANY authenticated user can write (NO RESTRICTIONS)
    match /media/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated(); // No size limits, no role restrictions
      allow delete: if isAuthenticated();
    }
    
    // Image files - anyone can read, admins can write
    match /media/images/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin() && isValidImageSize();
      allow delete: if isAdmin();
    }
    
    // Video files - anyone can read, ANY authenticated user can write (NO RESTRICTIONS)
    match /media/videos/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated(); // No size limits, no role restrictions
      allow delete: if isAuthenticated();
    }
    
    // Application uploads - public can create, admins can read
    match /uploads/applications/{applicationId}/{fileName} {
      allow create: if isValidFileSize();
      allow read: if isAdmin();
      allow update, delete: if isAdmin();
    }
    
    // System files - super admin only
    match /system/{allPaths=**} {
      allow read, write: if isSuperAdmin();
    }
  }
}

















