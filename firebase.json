{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/application",
        "destination": "/application.html"
      },
      {
        "source": "/about",
        "destination": "/about.html"
      },
      {
        "source": "/services",
        "destination": "/services.html"
      },
      {
        "source": "/contact",
        "destination": "/contact.html"
      },
      {
        "source": "/case-studies",
        "destination": "/case-studies.html"
      },
      {
        "source": "/divisions",
        "destination": "/divisions.html"
      },
      {
        "source": "/admin/dashboard",
        "destination": "/admin/dashboard.html"
      },
      {
        "source": "/admin/applications",
        "destination": "/admin/applications.html"
      },
      {
        "source": "/admin/content",
        "destination": "/admin/content.html"
      },
      {
        "source": "/admin/services",
        "destination": "/admin/services.html"
      },
      {
        "source": "/admin/media",
        "destination": "/admin/media.html"
      },
      {
        "source": "/admin/users",
        "destination": "/admin/users.html"
      },
            {
              "source": "/admin/settings",
              "destination": "/admin/settings.html"
            },
            {
              "source": "/admin/login",
              "destination": "/login.html"
            },
            {
              "source": "/login",
              "destination": "/login.html"
            },
      {
        "source": "/legal/privacy",
        "destination": "/legal/privacy.html"
      },
      {
        "source": "/legal/terms",
        "destination": "/legal/terms.html"
      },
      {
        "source": "/legal/cookies",
        "destination": "/legal/cookies.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|webp)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000"
          }
        ]
      },
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000"
          }
        ]
      },
      {
        "source": "**/favicon.*",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=86400"
          }
        ]
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "storage": {
      "port": 9199
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    }
  }
}





